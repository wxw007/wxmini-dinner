/* pages/orderlist/orderlist.wxss */
.eating-people-box{
  height: 50vh;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  position: fixed;
  z-index: 999;
  left: 0;
  right: 0;
  box-shadow: 0 0 20px #ccc;
  transform: translateX(120%);
  transition: all .3s ease-in-out;
  opacity: 0;
}
.eating-people-box.show{
  transform: translateX(0);
  opacity: 1;
}
.show-info-btn{
  position: fixed;
  z-index: 1000;
  bottom: 200rpx;
  width: 160rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  right: 0;
  opacity: .8;
  font-size: 32rpx;
  border-radius: 100rpx;
  transform: translateX(30%);
  box-sizing: border-box;
  padding-left: 30rpx;

}
.big-red{
  color: rgb(241, 28, 28);
  font-size: 36rpx;
}
.avator-box{
  height: 500rpx;
  overflow: auto;
  margin-top: 20rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
 
}

.avator-item{
  border-radius: 50%;
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  background: #fff;
  margin: 5rpx 10rpx;
}
.order-list-box{
 padding-bottom: 100rpx;
}
.control-box{
  flex-basis: 200rpx;
  display: flex;
}
.join-btn{
  position: fixed;
  bottom: 0;
  width:100%;
  line-height: 100rpx;
  height: 100rpx;
  color: #fff;
  background: rgb(81, 132, 243);
  
}
.join-btn> .btn{
  width: 180rpx;
  height: 100rpx;
  float: right;
  font-size: 28rpx;
  text-align: center;
  
}
.join-btn .orange{
  color: rgb(241, 119, 5);
}
.join-btn .yellow{
  color: rgb(243, 234, 102);
}
.join-btn .bg-orange{
  background: rgb(241, 119, 5);

}
.join-btn .bg-green{
  background: rgb(99, 185, 132);
}

.price{
  margin-left: 14rpx;
  color: rgb(245, 140, 3);
}
.bottom-text{
  padding-left:18rpx;
  display: inline-block;
  height: 100rpx;
  padding-top: 4rpx;
}
.bottom-text> view{
  font-size: 32rpx;
  line-height: 45rpx;
}
.bottom-text .red{
  color: rgb(252, 164, 33);
}
.tips-wrap{
  text-align: center;
  margin: 400rpx auto 250rpx auto;
}
.tips-text{
  color: #444;
  text-align: center;
  font-size: 20px;
}
.my-text{
  font-size: 20px
}
.my-btn{
  width: 80%;
  margin: 0 auto;
}
.order-item-avatar{
  overflow: hidden;
  padding-left: 20rpx;
  background: rgb(252, 249, 248);
  box-shadow: 0px 0px 1rpx rgb(212, 211, 211) inset;
  box-sizing: border-box;
  padding-right: 100rpx;
  position: relative;
}
.order-item-avatar .order-item-avatar-item{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 16rpx 10rpx;
  float: left;
  position: relative;
}
.order-item-avatar-item .x{
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  height: 40rpx;
  width: 40rpx;
  border-radius: 50%;
  text-align: center;
  right: 0;
  top: 0;
  background: rgba(94, 93, 93, 0.5);
  color: #fff;
  
   
}
.hide-people-list{
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color:rgb(206, 204, 204);
  
}
.height-0{
  height: 0;
}
.height-auto{
  height: auto;
}
.info-box > view{
   display: flex;
  flex: 1;
  height: 180rpx;
}
.info-box .info-item{
  flex: 1;
  text-align: center;
  align-items: center;
  border: 1rpx solid #ddd;
  margin-top: -1rpx;
  box-sizing: border-box;
  padding-top: 40rpx;
}
.info-box .info-item:last-child{
  margin-left: -1rpx;
}
.info-box .info-item > view{
  width: 100%;
}
.info-box .info-item > .num{
  margin-bottom: 20rpx;
  font-size: 36rpx;
  color: #666;
}
.info-box .info-item > .text{
  color: #aaa;
  font-size: 30rpx;
}