<!--pages/orderlist/orderlist.wxml-->
<view class='eating-people-box'>
  <text class='avator-title'>已点餐 <text>{{peopleList.length}}</text>人:</text>
  <text>建议点 <text class="big-red">{{peopleList.length +1}}</text> 份菜</text>
  <scroll-view class='avator-box' scroll-y>
    <image class="avator-item" wx:for="{{peopleList}}" wx:for-item="item" src="{{item}}"></image>
  </scroll-view>
</view>
<scroll-view class='order-list-box' scroll-y>
  <view class="cu-list menu {{menuBorder?'sm-border':''}} {{menuCard?'card-menu margin-top':''}}">
   <view class="cu-item {{menuArrow?'arrow':''}}" wx:for="{{orderList}}" wx:for-item="orderItem">
    <view class='content'>
      <text class='text-grey'>{{orderItem.foodName}}</text>
      <text class="price">{{orderItem.price}}元</text>
    </view>
    <view class='action'>
      <view class="cu-avatar-group">
        <view class="cu-avatar round sm" wx:for="{{orderItem.peopleList}}" wx:for-item="imgItem" style="background-image:url({{imgItem}});"></view>
      </view>
      <text class='text-grey text-sm'>{{orderItem.peopleList.length}} 人</text>
    </view>
  </view>
  </view>
</scroll-view>
<view class="join-btn">
      <button class='cu-btn round bg-green shadow' style="margin-right:50rpx" bindtap="gotoMakeOrder">我要点菜</button>
      <button class='cu-btn round bg-orange shadow' bindtap="getUserInfo">我要蹭吃</button>
</view>
